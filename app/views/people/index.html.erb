<div class="page-header">
  <h1>People</h1>
</div>

<table class="table table-bordered">
  <thead> PERSON
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person[:first_name] %></td>
        <td><%= person[:last_name] %></td>
        <td><%= person[:date_of_birth] %></td>
        <td><%= person[:eye_color] %></td>
        <td><%= person[:telephone_number] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
